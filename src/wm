#!/bin/sh
#
# wm - get window manager
# (c) KiÃ«d Llaentenn <kiedtl@tilde.team>
# See the COPYING file for copyright information.

# TODO: support for
#   - wayland compositors
#   - those few primitive x11 wms that 
#     don't set _NET_WM_NAME

[ -z "$DISPLAY" ] && exit

wm="$(xprop -root -notype _NET_WM_NAME)"
wm="${wm##*= \"}"
wm="${wm%%\"*}"

printf '%s\n' "$wm"
