#!/bin/sh
#
# os - get operating system
# (c) KiÃ«d Llaentenn <kiedtl@tilde.team>
# See the COPYING file for copyright information.

[ -z "$1" ] && set -- '$pretty_name'

while IFS='=' read -r key val
do
    val=${val%\"}
    val=${val#\"}

    case "$key" in
        ID*) id="$val" ;;
        PRETTY_NAME*) pretty_name="$val" ;;
        NAME*) name="$val" ;;
    esac
done < /etc/os-release

eval echo "$1"
